{
  "rewrites": [
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "functions": {
    "api/bot.js": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  }
}
